
#wrapper{
	height:1000px;
}

#main_head{
	background:#fff;
	position:fixed;
	top:0;
   	width:100%;
	height:78px;
 	margin:0 auto;
}

.main_head_inner{
	width:90%;
	margin:0 auto;
}

.main_logo{
   	position:absolute;
}

.main_logo_a{
    display:block;
    text-indent:-9999em;
    width:80px;
    height:78px;
    background:url(../img/product/main_logo.jpg) left center;
}

ul.lnb{
	padding:20px 0 0 120px;
}

ul.lnb:after{
	content:'';
	display:block;
	clear:both;
}

ul.lnb>li{
	float:left;
}

ul.lnb>li>a:link, ul.lnb>li>a:visited{
    text-decoration:none;
	display:block;
	padding:0 25px;
	height: 38px;
	line-height: 39px;
	font-size: 15px;
}

ul.lnb>li>a:hover, ul.lnb>li>a:focus{
	color:#ff0;
}

#main_body{
	background:#ff0;
   	margin:78px 0 0 0;
}
